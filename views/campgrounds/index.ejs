<% include ../partials/header %>

<header class="jumbotron">
	<div class="container">
		<h1>Welcome to YelpCamp!</h1>
		<p>It's yelp!  For Camp Sites!</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/CampSites/new">Add a camp site</a>			
		</p>
	</div>
</header>

<div class="row text-center row-images">	
	<% campSites.forEach(function(camp) { %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= camp.image %>">
				<div class="caption">
					<h4><%= camp.name %></h4>
				</div>
				<p><a href="/CampSites/<%= camp._id %>" class="btn btn-primary">Show</a></p>
			</div>
		</div>
	<% }); %>
</div>

<% include ../partials/footer %>