
<% include ../partials/header %>

<div class="row">
	<h1>Edit the comment for <%= campSite.name %></h1>
	<div class="form-new-site">
		<form action="/CampSites/<%= campSite._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="comment" value="<%= comment.text %>">
			</div>
			<div class="form-group">
				<input class="btn btn-lg btn-primary btn-block" type="submit">
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>